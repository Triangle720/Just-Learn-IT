@model bool
@{
    ViewData["Title"] = "Verify";
}

<div class="text-center" style="margin-top:20%">
    @if (Model.Equals(true))
    {
        <h1 class="text-success">@ViewBag.Message</h1>
        <a asp-action="Index">Back to login page</a>
    }
    else
    {
        <h1 class="text-danger">@ViewBag.Message</h1>
    }

</div>
