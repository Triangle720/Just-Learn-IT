@model bool
@inject IHttpContextAccessor httpContextAccessor

@{
    ViewData["Title"] = "Courses";
}

<div class=" row justify-content-center">
    <div class="col-md-8">
        <div class="text-center">
            <h1 class="display-4">Courses</h1>
            <hr />
            <h2 class="text-danger">PROJECT UNDER CONSTRUCTION</h2>
            <hr />
            @if (Model)
            {
                <p class="text-success">Your subscription is active</p>
            }
            else
            {
                <p class="text-danger">Your subscription is inactive.</p>
                <p class="text-danger">Go to: <b>Profile -> Subscription</b> and buy subscription.</p>
            }
        </div>
    </div>
</div>