@model IEnumerable<JustLearnIT.Models.CourseModel>

@{
    ViewData["Title"] = "Courses";
}

@if (Model.Count() > 0)
{
    <h1>Courses</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CourseName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseInfo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseInfo)
                    </td>
                    <td>
                        <a asp-action="Index" asp-controller="Video" asp-route-courseName="@item.CourseName">Play</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center" style="margin-top:20%;">
        <h1 class="text-danger">Buy subscription first!</h1>
    </div>
}